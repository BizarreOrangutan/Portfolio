---
import { siteConfig } from "../config";
const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
---

{
  hasProjects && (
    <section id="projects" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-7xl font-bold text-gray-900">
              Projects
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="space-y-8 sm:space-y-10 md:space-y-12">
              {siteConfig.projects.map((project, index) => {
                const Component = project.link ? "a" : "div";
                const linkProps = project.link
                  ? {
                      href: project.link,
                      target: "_blank",
                      rel: "noopener noreferrer",
                    }
                  : {};

                return (
                  <div class="group relative">
                    <Component
                      {...linkProps}
                      class={`block relative p-4 sm:p-6 md:p-8 lg:p-10 bg-gray-100 sm:bg-gray-50 rounded-xl sm:rounded-2xl md:rounded-3xl border border-gray-300 sm:border-gray-200 transition-all duration-300 ${
                        project.link
                          ? "hover:bg-white hover:shadow-2xl hover:border-gray-300 hover:-translate-y-2"
                          : ""
                      }`}
                    >
                      {project.link && (
                        <div class="absolute top-4 right-4 sm:top-6 sm:right-6 md:top-8 md:right-8 lg:top-10 lg:right-10 w-10 h-10 sm:w-12 sm:h-12 md:w-14 md:h-14 lg:w-16 lg:h-16 flex items-center justify-center bg-gray-900 rounded-full text-white transition-all duration-300 group-hover:bg-gray-700 z-10">
                          <svg
                            class="w-4 h-4 sm:w-5 sm:h-5 md:w-6 md:h-6 lg:w-7 lg:h-7 transition-transform duration-300 group-hover:translate-x-0.5 group-hover:-translate-y-0.5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M7 17L17 7M17 7H7M17 7V17"
                            />
                          </svg>
                        </div>
                      )}

                      <div class="space-y-4 sm:space-y-5 md:space-y-6">
                        {project.images && project.images.length > 0 && (
                          <div class="mb-4 sm:mb-5 md:mb-6">
                            {project.images.length === 1 ? (
                              <div class="flex justify-center">
                                <img 
                                  src={project.images[0]}
                                  alt={`${project.name} screenshot`}
                                  class="max-h-48 sm:max-h-64 md:max-h-80 lg:max-h-96 xl:max-h-[28rem] w-auto object-contain transition-all duration-500 group-hover:scale-105 rounded-lg sm:rounded-xl md:rounded-2xl shadow-lg cursor-zoom-in hover:shadow-2xl"
                                  onclick="openImageModal(this.src)"
                                />
                              </div>
                            ) : (
                              <div class={`flex flex-wrap justify-center gap-2 sm:gap-3 md:gap-4 ${
                                project.images.length === 2 ? 'flex-col sm:flex-row' :
                                project.images.length === 3 ? 'flex-col sm:flex-row' :
                                'flex-row flex-wrap'
                              }`}>
                                {project.images.map((image, imgIndex) => (
                                  <div class={`relative flex-shrink-0 ${
                                    project.images.length > 6 && imgIndex >= 6 ? 'hidden' : ''
                                  }`}>
                                    <div class="relative overflow-hidden rounded-lg shadow-lg">
                                      <img 
                                        src={image}
                                        alt={`${project.name} screenshot ${imgIndex + 1}`}
                                        class={`object-contain transition-all duration-500 group-hover:scale-105 cursor-zoom-in hover:shadow-2xl ${
                                          project.images.length === 2 ? 'max-h-48 sm:max-h-64 md:max-h-80 lg:max-h-96 xl:max-h-[24rem]' :
                                          project.images.length === 3 ? 'max-h-40 sm:max-h-56 md:max-h-64 lg:max-h-80 xl:max-h-96' :
                                          project.images.length === 4 ? 'max-h-32 sm:max-h-48 md:max-h-64 lg:max-h-80 xl:max-h-96' :
                                          'max-h-20 sm:max-h-32 md:max-h-40 lg:max-h-48'
                                        } w-auto`}
                                        onclick="openImageModal(this.src)"
                                      />
                                      {project.images.length > 6 && imgIndex === 5 && (
                                        <div class="absolute inset-0 bg-black bg-opacity-70 flex items-center justify-center">
                                          <span class="text-white font-bold text-lg sm:text-xl md:text-2xl">
                                            +{project.images.length - 6}
                                          </span>
                                        </div>
                                      )}
                                    </div>
                                  </div>
                                ))}
                              </div>
                            )}
                          </div>
                        )}

                        <div>
                          <span
                            class="text-xs sm:text-sm md:text-base font-mono font-bold"
                            style={{ color: siteConfig.accentColor }}
                          >
                            0{index + 1}
                          </span>
                          <h3 class="text-xl sm:text-2xl md:text-3xl lg:text-4xl font-bold text-gray-900 mt-1 sm:mt-2">
                            {project.name}
                          </h3>
                        </div>

                        <p
                          class={`text-sm sm:text-base md:text-lg lg:text-xl xl:text-2xl text-gray-600 leading-relaxed ${project.link ? "pr-12 sm:pr-16 md:pr-20 lg:pr-24" : ""}`}
                        >
                          {project.description}
                        </p>

                        {project.skills && project.skills.length > 0 && (
                          <div class="flex flex-wrap gap-1.5 sm:gap-2 md:gap-3 pt-2 sm:pt-3 md:pt-4">
                            {project.skills.map((skill) => (
                              <span
                                class={`px-2.5 sm:px-3 md:px-4 lg:px-5 xl:px-6 py-1.5 sm:py-2 md:py-2.5 lg:py-3 bg-gray-900 text-white rounded-md sm:rounded-lg md:rounded-xl text-xs sm:text-sm md:text-base lg:text-lg font-medium transition-all duration-300 ${
                                  project.link ? "group-hover:bg-gray-800 group-hover:shadow-lg" : ""
                                }`}
                              >
                                {skill}
                              </span>
                            ))}
                          </div>
                        )}
                      </div>
                    </Component>
                  </div>
                );
              })}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}

<!-- Image Modal -->
<div id="imageModal" class="fixed inset-0 bg-black bg-opacity-90 flex items-center justify-center z-50 hidden">
  <div class="relative max-w-[95vw] max-h-[95vh] flex items-center justify-center">
    <img id="modalImage" src="" alt="" class="max-w-full max-h-full object-contain rounded-lg shadow-2xl" />
    <button 
      class="absolute top-4 right-4 text-white hover:text-gray-300 text-4xl font-bold transition-colors duration-200"
      onclick="closeImageModal()"
    >
      &times;
    </button>
  </div>
</div>

<script>
  function openImageModal(imageSrc) {
    const modal = document.getElementById('imageModal');
    const modalImage = document.getElementById('modalImage');
    modalImage.src = imageSrc;
    modal.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  }

  function closeImageModal() {
    const modal = document.getElementById('imageModal');
    modal.classList.add('hidden');
    document.body.style.overflow = 'auto';
  }

  // Close modal when clicking outside the image
  document.getElementById('imageModal').addEventListener('click', function(e) {
    if (e.target === this) {
      closeImageModal();
    }
  });

  // Close modal with Escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      closeImageModal();
    }
  });
</script>
