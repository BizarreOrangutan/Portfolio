---
import { siteConfig } from "../config";
const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
---

{
  hasProjects && (
    <section id="projects" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
              Projects
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="space-y-12">
              {siteConfig.projects.map((project, index) => {
                const Component = project.link ? "a" : "div";
                const linkProps = project.link
                  ? {
                      href: project.link,
                      target: "_blank",
                      rel: "noopener noreferrer",
                    }
                  : {};

                return (
                  <div class="group relative">
                    <Component
                      {...linkProps}
                      class={`block relative p-6 sm:p-8 md:p-10 bg-gray-50 rounded-2xl sm:rounded-3xl border border-gray-200 transition-all duration-300 ${
                        project.link
                          ? "hover:bg-white hover:shadow-2xl hover:border-gray-300 hover:-translate-y-2"
                          : ""
                      }`}
                    >
                      {project.link && (
                        <div class="absolute top-6 right-6 sm:top-8 sm:right-8 md:top-10 md:right-10 w-12 h-12 sm:w-14 sm:h-14 md:w-16 md:h-16 flex items-center justify-center bg-gray-900 rounded-full text-white transition-all duration-300 group-hover:bg-gray-700 z-10">
                          <svg
                            class="w-5 h-5 sm:w-6 sm:h-6 md:w-7 md:h-7 transition-transform duration-300 group-hover:translate-x-0.5 group-hover:-translate-y-0.5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M7 17L17 7M17 7H7M17 7V17"
                            />
                          </svg>
                        </div>
                      )}

                      <div class="space-y-6">
                        {project.images && project.images.length > 0 && (
                          <div class="mb-6">
                            {project.images.length === 1 ? (
                              <div class="rounded-xl sm:rounded-2xl overflow-hidden shadow-lg">
                                <img 
                                  src={project.images[0]}
                                  alt={`${project.name} screenshot`}
                                  class="w-full h-64 sm:h-80 md:h-96 lg:h-[28rem] object-cover transition-transform duration-500 group-hover:scale-105"
                                />
                              </div>
                            ) : (
                              <div class={`grid gap-3 sm:gap-4 rounded-xl sm:rounded-2xl overflow-hidden shadow-lg ${
                                project.images.length === 2 ? 'grid-cols-1 sm:grid-cols-2' :
                                project.images.length === 3 ? 'grid-cols-1 sm:grid-cols-3' :
                                project.images.length === 4 ? 'grid-cols-2 grid-rows-2' :
                                'grid-cols-2 sm:grid-cols-3'
                              }`}>
                                {project.images.map((image, imgIndex) => (
                                  <div class={`overflow-hidden ${
                                    project.images.length === 4 && imgIndex === 0 ? 'sm:col-span-2' :
                                    project.images.length > 4 && imgIndex >= 3 ? 'hidden sm:block' :
                                    project.images.length > 6 && imgIndex >= 6 ? 'hidden' : ''
                                  }`}>
                                    <div class="relative">
                                      <img 
                                        src={image}
                                        alt={`${project.name} screenshot ${imgIndex + 1}`}
                                        class={`w-full object-cover transition-transform duration-500 group-hover:scale-105 ${
                                          project.images.length === 2 ? 'h-48 sm:h-64 md:h-80' :
                                          project.images.length === 3 ? 'h-40 sm:h-48 md:h-60' :
                                          project.images.length === 4 && imgIndex === 0 ? 'h-48 sm:h-64' :
                                          project.images.length === 4 ? 'h-32 sm:h-48' :
                                          'h-32 sm:h-40 md:h-48'
                                        }`}
                                      />
                                      {project.images.length > 6 && imgIndex === 5 && (
                                        <div class="absolute inset-0 bg-black bg-opacity-70 flex items-center justify-center">
                                          <span class="text-white font-bold text-xl sm:text-2xl">
                                            +{project.images.length - 6}
                                          </span>
                                        </div>
                                      )}
                                    </div>
                                  </div>
                                ))}
                              </div>
                            )}
                          </div>
                        )}

                        <div>
                          <span
                            class="text-sm sm:text-base font-mono font-bold"
                            style={{ color: siteConfig.accentColor }}
                          >
                            0{index + 1}
                          </span>
                          <h3 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 mt-2">
                            {project.name}
                          </h3>
                        </div>

                        <p
                          class={`text-lg sm:text-xl md:text-2xl text-gray-600 leading-relaxed ${project.link ? "pr-16 sm:pr-20 md:pr-24" : ""}`}
                        >
                          {project.description}
                        </p>

                        {project.skills && project.skills.length > 0 && (
                          <div class="flex flex-wrap gap-2 sm:gap-3 pt-4">
                            {project.skills.map((skill) => (
                              <span
                                class={`px-4 sm:px-5 md:px-6 py-2 sm:py-2.5 md:py-3 bg-gray-900 text-white rounded-lg sm:rounded-xl text-sm sm:text-base md:text-lg font-medium transition-all duration-300 ${
                                  project.link ? "group-hover:bg-gray-800 group-hover:shadow-lg" : ""
                                }`}
                              >
                                {skill}
                              </span>
                            ))}
                          </div>
                        )}
                      </div>
                    </Component>
                  </div>
                );
              })}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
